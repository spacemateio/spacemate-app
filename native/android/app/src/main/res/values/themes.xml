<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SpaceMate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background color -->
        <item name="android:windowBackground">@android:color/white</item>
        
        <!-- Force light mode -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.SpaceMate.ForceLightMode">
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Force light mode -->
        <item name="android:forceDarkAllowed">false</item>
        
        <!-- Pure white background -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        
        <!-- Use the new high-quality logo -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/spacemate_logo_full</item>
        
        <!-- Status bar -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        
        <!-- Smooth animation -->
        <item name="windowSplashScreenAnimationDuration">500</item>
        
        <!-- Main theme -->
        <item name="postSplashScreenTheme">@style/Theme.SpaceMate.ForceLightMode</item>
    </style>
</resources>